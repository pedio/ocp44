cat <<EOF > pv_registry.yaml
apiVersion: v1
kind: PersistentVolume
metadata:
  name: registry-storage-pv
spec:
  capacity:
    storage: 250Gi
  accessModes:
    - ReadWriteMany
  persistentVolumeReclaimPolicy: Retain
  nfs:
    path: /exports/registry
    server: nfshost
    readOnly: false
EOF

cat <<EOF > pvc_registry.yaml
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: registry-storage-pvc
spec:
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 250Gi
EOF
